<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="outdoorapp.to.StatoUtente" table="tbl_stato_utente"
		catalog="outdoorsports">
		<id name="id" type="java.lang.Integer">
			<column name="id_stato_utente" />
			<generator class="increment" />
		</id>
		<property name="nome" type="string">
			<column name="nome" not-null="true" />
		</property>
	</class>
	
	<query name="getAllStatoUtente">
        <![CDATA[ from outdoorapp.to.StatoUtente o ]]></query>
	<query name="getStatoAttivo">
        <![CDATA[ from outdoorapp.to.StatoUtente o where o.idStatoUtente = 1]]></query>
</hibernate-mapping>